<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:id="@+id/Main" android:contentDescription="schermata principale"
	android:background="@drawable/sfondo" android:gravity="center">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/ScrollView1"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:layout_above="@+id/ViewFlipper1">
		<RelativeLayout android:layout_height="wrap_content"
			android:id="@+id/ListContainer" android:orientation="vertical"
			android:layout_width="fill_parent">
			<LinearLayout android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:id="@+id/LinearLayout04"
				android:background="@drawable/selector_border" android:orientation="vertical"
				android:layout_height="wrap_content"
				style="@style/style_row_xl_land" android:layout_width="400dp">
				<Button style="@style/style_text" android:text="Liturgia delle Ore"
					android:clickable="true" android:id="@+id/button_liturgiaore"
					android:background="@drawable/selector" android:layout_height="wrap_content" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:layout_alignParentLeft="true" android:layout_below="@+id/LinearLayout05" android:background="@drawable/selector_border"
				android:id="@+id/linearLayout1" style="@style/style_row_xl_land"
				android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="400dp">
				<Button style="@style/style_text" android:id="@+id/button_breviariumRomanum"
					android:clickable="true" android:background="@drawable/selector_brown"
					android:text="Breviarium Romanum" android:layout_height="wrap_content" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:layout_alignParentLeft="true" android:layout_below="@+id/LinearLayout01" android:id="@+id/LinearLayout07"
				android:background="@drawable/selector_border" android:orientation="vertical"
				style="@style/style_row_xl_land" android:layout_height="wrap_content" android:layout_width="400dp">
				<Button android:text="La Sacra Bibbia" style="@style/style_text"
					android:clickable="true" android:id="@+id/button_bibbiaCEI"
					android:background="@drawable/selector_gold" android:layout_height="wrap_content" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:layout_alignParentLeft="true" style="@style/style_row" android:id="@+id/LinearLayout02"
				android:orientation="vertical" android:background="@drawable/selector_border"
				android:layout_height="wrap_content" android:layout_below="@+id/LinearLayout06" android:layout_width="400dp">
				<Button style="@style/style_text" android:text="Rito della Messa"
					android:clickable="true" android:id="@+id/button_ritodellamessa"
					android:background="@drawable/selector_purple"
					android:layout_height="wrap_content" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout style="@style/style_row_xl_land" android:id="@+id/LinearLayout09"
				android:orientation="vertical" android:background="@drawable/selector_border"
				android:layout_height="wrap_content" android:layout_below="@+id/LinearLayout03" android:layout_alignParentRight="true" android:layout_width="400dp">
				<Button style="@style/style_text" android:text="Concilio Vaticano II"
					android:clickable="true" android:background="@drawable/selector"
					android:id="@+id/button_conciliovaticanoII" android:layout_height="wrap_content" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout style="@style/style_row_xl_land" android:id="@+id/LinearLayout10"
				android:orientation="vertical" android:background="@drawable/selector_border"
				android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_below="@+id/LinearLayout02" android:layout_width="400dp">
				<Button style="@style/style_text" android:text="Catechismo della Chiesa"
					android:clickable="true" android:id="@+id/button_catechismo"
					android:background="@drawable/selector_orange"
					android:layout_height="wrap_content" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:background="@drawable/selector_border" style="@style/style_row_xl_land" android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/LinearLayout05" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_width="400dp">
				<Button android:background="@drawable/selector_blue" android:id="@+id/button_rosario" android:text="Rosario della B.V Maria" android:layout_height="wrap_content" style="@style/style_text" android:clickable="true" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:background="@drawable/selector_border" style="@style/style_row_xl_land" android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/LinearLayout01" android:layout_below="@+id/LinearLayout05" android:layout_alignParentRight="true" android:layout_width="400dp">
				<Button android:background="@drawable/selector_green" android:id="@+id/button_4settSalterio" android:text="4 sett. Salterio" android:layout_height="wrap_content" style="@style/style_text" android:clickable="true" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:background="@drawable/selector_border" style="@style/style_row_xl_land" android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/LinearLayout08" android:layout_alignTop="@+id/LinearLayout07" android:layout_alignParentRight="true" android:layout_width="400dp">
				<Button android:background="@drawable/selector" android:id="@+id/button_magisteroChiesa" android:text="Magistero della Chiesa" android:layout_height="wrap_content" style="@style/style_text" android:clickable="true" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:background="@drawable/selector_border" style="@style/style_row_xl_land" android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/LinearLayout06" android:layout_below="@+id/LinearLayout07" android:layout_alignParentLeft="true" android:layout_width="400dp">
				<Button android:background="@drawable/selector_green" android:id="@+id/button_preghiere" android:text="Preghiere" android:layout_height="wrap_content" style="@style/style_text" android:clickable="true" android:layout_width="200dp"></Button>
			</LinearLayout>
			<LinearLayout android:background="@drawable/selector_border" style="@style/style_row_xl_land" android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/LinearLayout03" android:layout_alignTop="@+id/LinearLayout06" android:layout_alignParentRight="true" android:layout_width="400dp">
				<Button android:background="@drawable/selector" android:id="@+id/button_missaleRomanum" android:text="Missale Romanum" android:layout_height="wrap_content" style="@style/style_text" android:clickable="true" android:layout_width="200dp"></Button>
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>
	<ViewFlipper android:outAnimation="@anim/flipout" android:background="#000000" android:layout_width="fill_parent" android:flipInterval="5000" android:layout_height="wrap_content" android:inAnimation="@anim/flipin" android:id="@+id/ViewFlipper1" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true">
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/TextView03" android:layout_gravity="center" android:text="LINK UTILI:" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/textView2" android:layout_gravity="center" android:text="http://www.chiesacattolica.it" android:autoLink="web" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/TextView01" android:layout_gravity="center" android:text="http://www.vatican.va" android:autoLink="web" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/textView1" android:layout_gravity="center" android:text="http://www.maranatha.it" android:autoLink="web" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/TextView05" android:layout_gravity="center" android:text="CONTATTI:" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/TextView04" android:layout_gravity="center" android:text="mf.calimero@gmail.com" android:autoLink="email|web" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/TextView07" android:text="AIUTO:" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center" android:id="@+id/TextView06" android:text="clicca su un pulsante per il download e la lettura di un modulo" android:autoLink="email|web" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center" android:id="@+id/TextView08" android:text="tieni premuto a lungo un pulsante per aggiornare quel modulo" android:autoLink="email|web" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center" android:id="@+id/TextView02" android:text="premi il tasto Menu sul tuo smartphone per le opzioni" android:autoLink="email|web" android:layout_width="fill_parent"></TextView>
	</ViewFlipper>
</RelativeLayout>