<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="style_row">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="style_text" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:typeface">serif</item>
        <item name="android:height">80dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">5dp</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:animationDuration">500</item>
    </style>
    <style name="cl_title_style" parent="android:Widget.TextView">
        <item name="android:focusable">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="style_row_land">
    	<item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="Rosario" parent="@style/style_text">
    	<item name="android:textColor">#000000</item>
    </style>
</resources>
